{
  "name": "mouse-note",
  "version": "0.0.1",
  "main": "dist/index.js",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"npm run build-electron\" \"npm run serve-mouse-note\" \"npm run wait-for-mouse-note && npm run start-electron-forge\"",
    "start-electron-forge": "electron-forge start",
    "build-mouse-note": "ng build MouseNote",
    "build-electron": "tsc --project projects/electron/tsconfig.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:MouseNote": "node dist/mouse-note/server/server.mjs",
    "serve-mouse-note": "ng serve MouseNote",
    "wait-for-mouse-note": "wait-on http://localhost:4200",
    "electron-forge-package": "electron-forge package",
    "package": "npm run build-electron && npm run build-mouse-note && npm run electron-forge-package",
    "make": "build-electron && build-mouse-note && electron-forge make",
    "publish-app": "build-electron && build-mouse-note && electron-forge publish"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.1.0",
    "@angular/common": "^18.1.0",
    "@angular/compiler": "^18.1.0",
    "@angular/core": "^18.1.0",
    "@angular/forms": "^18.1.0",
    "@angular/platform-browser": "^18.1.0",
    "@angular/platform-browser-dynamic": "^18.1.0",
    "@angular/platform-server": "^18.1.0",
    "@angular/router": "^18.1.0",
    "@angular/ssr": "^18.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.0",
    "@angular/cli": "^18.1.0",
    "@angular/compiler-cli": "^18.1.0",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "concurrently": "^8.2.2",
    "electron": "^31.2.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.2",
    "wait-on": "^7.2.0"
  }
}
